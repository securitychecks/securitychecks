{
  "name": "@securitychecks/cli",
  "version": "0.2.0",
  "description": "SecurityChecks CLI - Enforce backend invariants in your codebase",
  "type": "module",
  "license": "Apache-2.0",
  "author": "SecurityChecks <hello@securitychecks.ai>",
  "homepage": "https://securitychecks.ai",
  "repository": {
    "type": "git",
    "url": "https://github.com/securitychecks/securitychecks"
  },
  "keywords": [
    "securitychecks",
    "security",
    "invariants",
    "backend",
    "authorization",
    "code-review",
    "ci",
    "static-analysis",
    "webhooks",
    "idempotency",
    "tenant-isolation",
    "rate-limiting"
  ],
  "bin": {
    "scheck": "./dist/index.js",
    "securitychecks": "./dist/index.js"
  },
  "main": "./dist/lib.js",
  "types": "./dist/lib.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lib.js",
      "types": "./dist/lib.d.ts"
    }
  },
  "files": [
    "dist",
    "../LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@securitychecks/collector": "workspace:*",
    "commander": "^14.0.2",
    "glob": "^13.0.0",
    "picocolors": "^1.1.1",
    "ts-morph": "^27.0.2"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
